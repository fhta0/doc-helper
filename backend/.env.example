# Database
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/doc_ai

# JWT Secret
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE_GUEST=10485760
MAX_FILE_SIZE_AUTHENTICATED=104857600

# App
APP_NAME=DocAI
APP_VERSION=0.1.0
DEBUG=True

# AI Configuration
AI_BASE_URL=https://api.openai.com/v1
AI_API_KEY=your-api-key-here
AI_MODEL=gpt-4o-mini
AI_TIMEOUT=60

# WeChat Pay Configuration
# 商户号
WECHAT_MCHID=your_mchid
# 应用ID
WECHAT_APPID=your_appid
# APIv3密钥 (32字符，在商户平台设置)
WECHAT_APIV3_KEY=your_apiv3_key_32_chars
# 商户证书序列号
WECHAT_CERT_SERIAL_NO=your_cert_serial_no
# 商户私钥路径
WECHAT_KEY_PATH=cert/apiclient_key.pem
# 微信支付平台公钥路径
WECHAT_PUBLIC_KEY_PATH=cert/pub_key.pem
# 微信支付平台公钥ID (格式: PUB_KEY_ID_xxx，从商户平台复制)
WECHAT_PUBLIC_KEY_ID=your_public_key_id
# 支付回调地址
WECHAT_NOTIFY_URL=https://your-domain.com/api/purchase/wechat/notify
